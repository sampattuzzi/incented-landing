<!-- Jumbotron
================================================== -->
<div id="jumbotron" class="jumbotron odd background" data-ride="carousel">
  <div class="container">

    <img src="img/logo.png" class="logo"></img>

    <h1>Be accountable.</h1>

    <h3>
      Building good habits is more fun together. Find your group and get the support you need to achieve your goals. 
    </h3>

    <div class="cards">
      
      {{#each challenges}}
      {{#with this}}
      <div class="challenge-card-container">
        <div class="challenge-card selected">

          {{#unless exists}}
          <div class="overlay">
            <div class="tick">?</div>
          </div>
          {{/unless}}

          <div class="image-wrapper">
            <div class="image" style="background-image: url('img/{{image}}');">
              <div class="overlay-text">
                <h2>{{title}}</h2>
              </div>
            </div>
          </div>
          
          {{#if exists}}
          <div class="stats">
            <p class="number"><img src="img/members.png"/>{{members}}</p>
            <p class="number-label">Buddies</p>
          </div>
          {{else}}
          <div class="stats coming-soon">
            <p>Sign up to see more.</p>
          </div>
          {{/if}}

        </div>
      </div>
      {{/with}}
      {{/each}}

    </div><!-- /.row -->

    <section class="cta">
      <p>Find a group near you...</p>
      <button id="challenge-me-button" type="button" class="p1 fst-cta" data-toggle="modal" data-target="#signup-modal">
        Sign up <strong>now</strong>.
      </button>
    </section>

  </div>
</div><!-- /.Jumbotron -->

