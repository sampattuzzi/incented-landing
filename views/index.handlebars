<!-- Jumbotron
================================================== -->
<div id="jumbotron" class="jumbotron odd background" data-ride="carousel">
  <div class="container">

    <img src="img/logo.png" class="logo"></img>

    <h1>A community of habit hackers.</h1>

    <h3>
      Join one of our meetups and we will help you stick to your habits <strong>effortlessly</strong>.    
    </h3>

    <div class="cards">
      
      {{#each challenges}}
      {{#with this}}
      <div class="challenge-card-container">
        <div class="challenge-card selected">

          {{#unless exists}}
          <div class="overlay">
            <div class="tick">?</div>
          </div>
          {{/unless}}

          <div class="image-wrapper">
            <div class="image" style="background-image: url('img/{{image}}');">
              <div class="overlay-text">
                <h2>{{title}}</h2>
              </div>
            </div>
          </div>
          
          {{#if exists}}
          <div class="stats">
            <p class="number"><img src="img/members.png"/>{{members}}</p>
            <p class="number-label">Members</p>
          </div>
          {{else}}
          <div class="stats coming-soon">
            <p>Coming soon...</p>
          </div>
          {{/if}}

        </div>
      </div>
      {{/with}}
      {{/each}}

    </div><!-- /.row -->

    <section class="cta">
      <p>Find out when the next meetup is...</p>
      <button id="challenge-me-button" type="button" class="p1 fst-cta" data-toggle="modal" data-target="#signup-modal">
        Sign up <strong>now</strong>.
      </button>
    </section>

  </div>
</div><!-- /.Jumbotron -->

