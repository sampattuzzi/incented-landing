<!-- Final CTA
================================================== -->
<div class="odd background" data-ride="carousel">
  <div class="container">
    <h2>Want to build a good habit?</h2>
      <button type="button" class="p2" data-toggle="modal" data-target="#signup-modal">
        Challenge me!
      </button>
  </div>
</div><!-- /.Final CTA -->

<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="signup-form form-1">
        <h2><strong>Incented</strong> is coming soon.</h2>
        <h3>Sign-up and be the first to get early access.</h3>
        <form data-toggle="validator" class="email-signup">
          
          <div class="form-group">
            <input type="text" id="name" name="name"
            placeholder="Name" 
            pattern="^([ A-z])*$" required
            data-error="Your name should only use alphabetic characters." >
            <span class="help-block with-errors"></span>
          </div>

          <div class="form-group">
            <input type="email" id="email" name="email"
            placeholder="Email address" 
            data-error="Please enter a valid email address." required>
            <span class="help-block with-errors"></span>
          </div>

          <div class="form-group has-error">
            <div class="error-block help-block"></div>
          </div>
          
          <button type="submit" class="btn btn-primary">Signup</button>
        </form>
      </div>

      <div class="signup-form form-2">
        <h2>What habit do you want to build?</h2>
        <h3>Register your interest in a habit.</h3>
        <form>
          <div class="row">

            {{#each challenges}}
            {{#with this}}
            <div class="challenge-card-container small">
              <div class="challenge-card small selectable" data-select-id="{{id}}">
                <div class="overlay">
                  <div class="tick">âœ”</div>
                </div>
                <div class="image-wrapper">
                  <div class="image" style="background-image: url('img/{{image}}');">
                    <div class="overlay-text">
                      <h2>{{title}}</h2>
                      <h3>Challenge</h3>
                    </div>
                  </div>
                </div>
                <div class="stats">
                  <div class="row">
                    <p class="number"><img src="img/members.png"/>{{members}}</p>
                    <p class="number-label">Members</p>
                  </div>
                  <div class="row">
                    <p class="number"><img src="img/success.png"/>{{success}}</p>
                    <p class="number-label">Success</p>
                  </div>
                  <div class="row">
                    <p class="number"><img src="img/days.png"/>{{days}}</p>
                    <p class="number-label">Days</p>
                  </div>
                </div>

              </div>
            </div>
            {{/with}}
            {{/each}}

          </div><!-- /.row -->

          <select name="habits" class="selector" multiple>
            <option value="wake-up-challenge"></option>
            <option value="get-out-challenge"></option>
            <option value="running-challenge"></option>
          </select>

          <div>
            <input name="extra_habits" type="text" class="tag-input" value="" data-role="tagsinput" placeholder="e.g. healthy eating, meditation...">
          </div>
          
          <button type="submit" class="btn btn-primary">Finish</button>
        </form>
      </div>

      <div class="signup-form form-3">
        <h2>Thank you for your interest.</h2>
        <h3>Share <strong>Incent</strong> with your friends. Building habits is better together.</h3>
      </div>
      
    </div>
  </div>
</div>
