<!-- Jumbotron
================================================== -->
<div id="jumbotron" class="jumbotron odd background" data-ride="carousel">
  <div class="container">
    <img src="img/logo.png" class="logo"></img>
    <h1>Build good habits effortlessly.</h1>
    <div class="cta-image-container">
      <div class="cta-button-container">
        <h3>
          A habit becomes effortless when done every day. Pledge money to never
          slip twice and reap the rewards of a better life.
        </h3>
        <button id="challenge-me-button" type="button" class="p1" data-toggle="modal" data-target="#signup-modal">
          Challenge me!
          <img class="pointer" src="img/arrow.png">
        </button>
      </div>
      <img src="img/mockups.png" class="mockups"></img>
    </div>
  </div>
</div><!-- /.Jumbotron -->

<!-- Featured Challenges
================================================== -->
<div class="even background" data-ride="carousel">
  <div class="container">
    <h2>Featured Challenges</h2>
    <h3>Choose choose one of our beginner challenges and join others on the
    journey to mastering habits.</h3>
    
    <div class="row">
      
      {{#each challenges}}
      {{#with this}}
      <div class="challenge-card-container">
        <div class="challenge-card">
          <div class="image-wrapper">
            <div class="image" style="background-image: url('img/{{image}}');">
              <div class="overlay-text">
                <h2>{{title}}</h2>
                <h3>Challenge</h3>
              </div>
            </div>
          </div>
          <div class="stats">
            <div class="row">
              <p class="number"><img src="img/members.png"/>{{members}}</p>
              <p class="number-label">Members</p>
            </div>
            <div class="row">
              <p class="number"><img src="img/success.png"/>{{success}}</p>
              <p class="number-label">Success</p>
            </div>
            <div class="row">
              <p class="number"><img src="img/days.png"/>{{days}}</p>
              <p class="number-label">Days</p>
            </div>
          </div>

        </div>
      </div>
      {{/with}}
      {{/each}}

    </div><!-- /.row -->
    
    <button class="p2" type="button" data-toggle="modal" data-target="#signup-modal">Get started now.</button>      

  </div>
</div><!-- /.Featured Challenges -->

